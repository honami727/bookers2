<body>

<h2 class="mt-3">New book</h2>

<%= form_with model: book, url: '/books', method: :post do |f| %>

  <h6 class="mb-2">Title</h6>
  <%= f.text_field :title %>

  <h6 class="mb-2 mt-3">Opinion</h6>
  <%= f.text_area :body %>
  
  <%= f.submit 'Create Book', class: "btn btn-success" %>
  
<% end %>

</body>
