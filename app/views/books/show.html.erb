<head></head>
<body>
  
  <header></header>
  
  <main>
    <p id="notice"></p>
    <div class="container">
      <div class="row">
        <div class="col-md-3">
        <%= render 'users/info', user: @user %>

        <h2>New book</h2>

          <%= form_with model: @book, url: '/books', method: :post do |f| %>

            <h6>Title</h6>
            <%= f.text_field :title %>

            <h6>Opinion</h6>
            <%= f.text_area :body %>
  
            <%= f.submit 'Create Book', class: 'btn btn-success' %>
  
          <% end %>
        </div>
        
        <div class="col-md-8 offset-md-1">
          <h1>Book detail</h1>
    
          <table class="table">
　  
　          <tbody>
　            <% @books.each do |book| %>
　              <tr>
　                <td>
　                    <%= image_tag @user.get_profile_image(100,100) %>
　                    <br><%= link_to @user.name %>
　                </td>
　                <td><%= link_to book.title, book_path(book.id) %></td>
　                <td><%= book.body %></td>
　                <% if user_signed_in? && current_user.id == @book.user_id %>
　                <td><%= button_to 'Edit', edit_book_path(@book), class: "btn btn-success" %></td>
　                <td><%= button_to 'Destroy', destroy_book_path(@book.id), class: "btn btn-danger", method: :delete, "data-confirm" => "本当に消しますか？" %></td>
　                <% end %>
　              </tr>
　            <% end %>
　          </tbody>
　        </table>
　
　    </div>
　    </div>
　  </div>
  </main>  
  
  <footer>
      <div class="container">
　     <div class="row">
　       <div class="mx-auto">
　         <p>CopyRight Infratop.inc</p>
　       </div>
　     </div>
　   </div>
  </footer>
</body>

