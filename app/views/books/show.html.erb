<head></head>
<body>
  
  <header></header>
  
  <main>
    <p id="notice"></p>
    <div class="container">
      <div class="row">
        <div class="col-md-3">
        <%= render 'users/info', user: @user %>

        <%= render 'books/new', book: @bookers %>
        
        </div>
        
        <div class="col-md-8 offset-md-1">
          <h1>Book detail</h1>
    
          <table class="table">
　  
　          <tbody>
　            
　              <tr>
　                <td><%= link_to(@book.user) do %>
　                    <%= image_tag @book.user.get_profile_image(100,100) %>
　                    <% end %>
　                    <br><%= link_to @user.name, user_path(@user.id) %>
　                </td>
　                <td><%= link_to @book.title, book_path(@book.id) %></td>
　                <td><%= @book.body %></td>
　                <% if user_signed_in? && current_user.id == @book.user_id %>
　                <td><%= link_to 'Edit', edit_book_path(@book), class: "btn btn-success", method: :get %></td>
　                <td><%= link_to 'Destroy', book_path(@book.id), class: "btn btn-danger", method: :delete, "data-confirm" => "本当に消しますか？" %></td>
　                <% end %>
　              </tr>
　           
　          </tbody>
　        </table>
　
　    </div>
　    </div>
　  </div>
  </main>  
  
  <footer>
      <div class="container">
　     <div class="row">
　       <div class="mx-auto">
　         <p>CopyRight Infratop.inc</p>
　       </div>
　     </div>
　   </div>
  </footer>
</body>

