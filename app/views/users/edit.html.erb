<body>
<main>
    <p id="notice"></p>
    <div class="container">
      <div class="row">
        <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

        <h2>User info</h2>

        <%= form_with model: @user, url: @user_params, method: :put do |f| %>

           <h6>Name</h6>
           <%= f.text_field :name %>

           <h6>Image</h6>
           <%= f.file_field :profile_image  %>

           <h6>Introduction</h6>
           <%= f.text_area :introduction %>

           <%= f.submit "Update User", class: 'btn btn-secondary' %>
  
        <% end %>
        
        </div>
      </div> 
    </div>    
</main>

<footer>
    <div class="container">
　    <div class="row">
　       <div class="mx-auto">
　         <p>CopyRight Infratop.inc</p>
　       </div>
　  </div>
    </div>
</footer>

</body>
