<body>
<%= render 'users/info', user: @user %>
    
<h1>New book</h1>

<%= form_with model: @book, url: '/books', method: :post do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>
  
  <%= f.submit 'Create Book' %>
  
<% end %>

<h1>Users</h1>

<table>
　  <thead>
　    <tr>
　      <th>image</th>
　      <th>name</th>
　      <th colspan="3"></th>
　    </tr>
　  </thead>
　  
　  <tbody>
　   <% @users.each do |user| %>
　    
　    <tr>
　      <td><%= image_tag user.get_profile_image(100,100) %></td>
　      <td><%= user.name %></td>
　      <td><%= link_to 'Show', user_path(user.id) %></td>
　    </tr>
　   <% end %>
　  </tbody>
　  
　</table>

</body>