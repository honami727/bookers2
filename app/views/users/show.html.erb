<body>

<%= render 'users/info', user: @user %>

<% @post_images.each do |post_image| %>

<div>
    <p><%= image_tag @user.get_profile_image(100,100) %></p>
    <p><%= post_image.book_name %></p>
    <p><%= post_image.caption %></p>
    <p><%= post_image.user.name %></p>
</div>

<% end %>

<h1>Books</h1>

<table>
　  <thead>
　    <tr>
　      <th>Title</th>
　      <th>Opinion</th>
　      <th colspan="2"></th>
　    </tr>
　  </thead>
　  
　  <tbody>
　    <% @books.each do |book| %>
　    <tr>
　      <td><%= link_to book.title, book_path(book.id) %></td>
　      <td><%= book.body %></td>
　    </tr>
　    <% end %>
　  </tbody>
　  
　</table>

</body>