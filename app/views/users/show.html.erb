<body>

<h2>User info</h2>

<div>
    <h4><%= @user.name %></h4>
    <h3><%= @user.Introduction %></h3>
    <%= image_tag @user.get_profile_image(100,100) %>
      <% if @user == current_user %>
        <%= link_to edit_user_path do %>
          <i class="fa-solid fa-user-gear"></i>
        <% end %>
      <% end %>
</div>

<% @post_images.each do |post_image| %>

<div>
    <p><%= image_tag @user.get_profile_image(100,100) %></p>
    <p><%= post_image.book_name %></p>
    <p><%= post_image.caption %></p>
    <p><%= post_image.user.name %></p>
</div>

<% end %>

<h1>Books</h1>

<table>
　  <thead>
　    <tr>
　      <th>Title</th>
　      <th>Opinion</th>
　      <th colspan="2"></th>
　    </tr>
　  </thead>
　  
　  <tbody>
　    <% @books.each do |book| %>
　    <tr>
　      <td><%= link_to book.title, book_path(book.id) %></td>
　      <td><%= book.body %></td>
　    </tr>
　    <% end %>
　  </tbody>
　  
　</table>

</body>