<body>
 
 <h2>User info</h2>

<div>
    <h3><%= @user.name %></h3>
    <h2><%= @user.Introduction %></h2>
    
      <% if @user == current_user %>
        <%= link_to edit_user_path(@user) do %>
          <i class="fa-solid fa-user-gear"></i>
        <% end %>
      <% end %>
</div>
 
 <h1>Books</h1>

 <table>
　  <thead>
　    <tr>
　      <th>Title</th>
　      <th>Opinion</th>
　      <th colspan="2"></th>
　    </tr>
　  </thead>
　  
　  <tbody>
　   <% @books.each do |book| %>
　    
　    <tr>
　      <td><%= link_to book.title, book_path(book.id) %></td>
　      <td><%= book.body %></td>
　    </tr>
　   <% end %>
　  </tbody>
　  
　</table>
</body>