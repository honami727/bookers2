<body>
 <h1>Books</h1>

 <table>
　  <thead>
　    <tr>
　      <th>Title</th>
　      <th>Opinion</th>
　      <th colspan="2"></th>
　    </tr>
　  </thead>
　  
　  <tbody>
　   <% @books.each do |book| %>
　    
　    <tr>
　      <td><%= link_to book.title, book_path(book.id) %></td>
　      <td><%= book.body %></td>
　    </tr>
　   <% end %>
　  </tbody>
　  
　</table>
</body>